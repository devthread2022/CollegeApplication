<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.DashboardTwo"
    android:background="@color/white"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/teachers"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/layout_back"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_column="1"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/teachers"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teachers"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/makeup"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/layout_back"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_column="2"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/makeup"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make Up"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/rms"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/layout_back"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_column="1"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/rms"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RMS"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/happenings"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/layout_back"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_column="2"
                android:layout_margin="5dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/lecture"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happenings"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>